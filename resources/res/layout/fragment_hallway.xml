<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:clipChildren="false" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/ClubhouseNavToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/search_icon" android:src="@drawable/ic_search" android:contentDescription="@string/cd_search" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/ClubhouseNavIcon"/>
            <com.clubhouse.android.shared.ui.AvatarView android:id="@+id/me" android:contentDescription="@string/cd_my_profile" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" style="@style/ClubhouseNavIcon"/>
            <ImageView android:id="@+id/notification_icon" android:src="@drawable/ic_notification_off" android:contentDescription="@string/cd_notifications" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/me" app:layout_constraintTop_toTopOf="0" style="@style/ClubhouseNavIcon"/>
            <ImageView android:id="@+id/events_icon" android:src="@drawable/ic_calendar" android:contentDescription="@string/cd_calendar" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/notification_icon" app:layout_constraintTop_toTopOf="0" style="@style/ClubhouseNavIcon"/>
